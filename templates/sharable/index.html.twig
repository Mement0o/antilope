{% extends 'base.html.twig' %}

{% block title %}Sharables{% endblock %}

{% block content %}

sharables {% if is_granted('create', sharable) %} > <a href="{{ path('sharable_new') }}">new</a> {% endif %}

<hr>

<ul>
{% for sharable in sharables %}

<li>

<h2>{{ sharable.name }}</h2>
<p>{{ sharable.description }}</p>
<a href="{{ path('sharable_show', {id: sharable.id}) }}">[details]</a>

</li>

{% endfor %}
</ul>


{% if previous >= 0 %}
    <a href="{{ path('sharable', { offset: previous }) }}">[previous]</a>
{% endif %}
{% if next < sharables|length %}
    <a href="{{ path('sharable', { offset: next }) }}">[next]</a>
{% endif %}



{% endblock %}