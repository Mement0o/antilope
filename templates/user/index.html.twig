{% extends 'base.html.twig' %}


{% block content %}

<h1>Users</h1>

{% for user in users %}

<div class="card mb-3">

    <div class="card-header">

        <div class="card-title">
            <h5>
            {{ user.username }}
            <span class="badge badge-warning">{{ user.userClass.name }}</span>
            <span class="badge badge-light">{{ user.shareScore }}</span>

            </h5>
        </div>
    </div>

    <div class="card-body">
    
        <a class="btn btn-light" href="{{ path('user_show', {id: user.id}) }}">discover</a>


    </div>

</div>


{% endfor %}


{% endblock %}